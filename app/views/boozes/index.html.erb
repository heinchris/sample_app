<h1>Boozes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @boozes.each do |booze| %>
  <tr>
    <td><%= booze.name %></td>
    <td><%= booze.rating %></td>
    <td><%= link_to 'Show', booze %></td>
    <td><%= link_to 'Edit', edit_booze_path(booze) %></td>
    <td><%= link_to 'Destroy', booze, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Add', booze_user_add_path (booze.id) %></td>
  </tr>
<% end %>
</table>

<br />

<%= render 'form' %>
